@model MVCCrudDemo.Models.RegisterUsersModel

@{
    ViewBag.Title = "StudentInfoById";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Student Info</title>
    <!-- Favicon icon -->
    @*<link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">*@
    <!-- Custom Stylesheet -->
    <link href="~/Content/Theme/DashBoard/css/style.css" rel="stylesheet" />

</head>

<body>

    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <!-- row -->

            <div class="container-fluid ">
                <div class="row">
                    <div class="col-lg-4 col-xl-3">
                        <div class="card ">
                            <div class="card-body">
                                <div class="media align-items-center mb-4">
                                    <img class="mr-3" src="~/Content/Theme/DashBoard/images/avatar/11.png" width="80" height="80" />
                                    <div class="media-body">
                                        <h3 class="mb-0">@Html.DisplayFor(m => m.FirstName)</h3>
                                    </div>
                                </div>

                                <div class="row mb-5">
                                    @*<div class="col-12 text-center">
                                            <button class="btn btn-danger px-5">Follow Now</button>
                                        </div>*@
                                </div>

                                <h4>About Me</h4>
                                <ul class="card-profile__info">
                                    <li class="mb-1"><strong class="text-dark mr-4">First Name</strong> <span>@Html.DisplayFor(m => m.FirstName)</span></li>
                                    <li class="mb-1"><strong class="text-dark mr-4">Last Name</strong> <span>@Html.DisplayFor(m => m.LastName)</span></li>
                                    <li class="mb-1"><strong class="text-dark mr-5">Address</strong> <span>@Html.DisplayFor(m => m.Address)</span></li>
                                    <li class="mb-1"><strong class="text-dark mr-5">City</strong> <span>            @Html.DisplayFor(m => m.City)</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->

    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->
    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/Content/Theme/DashBoard/plugins/common/common.min.js"></script>
    <script src="~/Content/Theme/DashBoard/js/custom.min.js"></script>
    <script src="~/Content/Theme/DashBoard/js/settings.js"></script>
    <script src="~/Content/Theme/DashBoard/js/gleek.js"></script>
    <script src="~/Content/Theme/DashBoard/js/styleSwitcher.js"></script>

</body>

</html>